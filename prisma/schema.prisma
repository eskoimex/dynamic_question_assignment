generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Question {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  content   String
  regionId  String   @db.String
  cycle     Int      @default(1)
}

model Region {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String   @unique
  cycleDuration Int  @default(7) // days
  startDate DateTime
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  regionId  String   @db.String
}
